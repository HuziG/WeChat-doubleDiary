/* components/edit-diary/index.wxss */
.con-wrapper{
  padding: 20rpx;
}
.container{
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.date{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: 700;
}
.line{
  padding: 10rpx 0;
  border-bottom: 1px dashed #ccc; 
}
.diaryInput{
  font-size: 13pt;
  letter-spacing: 1rpx;
  padding: 10px 0;
  min-height: 80vh;
}
.submit-btn{
  width: 160rpx;
  background-color: #07C160;
  color: #fff;
  font-size: 11pt;
  border-radius: 10em;
  box-shadow: 0px 3px 5px #E5E5E5;
  margin-right: 0 !important;
}
.submit-btn:active{
  opacity: .5;
}
.submit-btn::after{
  border: none;
}